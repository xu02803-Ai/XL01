{
  "buildCommand": "cd '每日科技脉搏 app' && npm run build",
  "installCommand": "cd '每日科技脉搏 app' && npm install",
  "outputDirectory": "每日科技脉搏 app/dist",
  "framework": "vite",
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs20.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "GEMINI_API_KEY": "@gemini_api_key",
    "API_KEY": "@gemini_api_key"
  }
}
